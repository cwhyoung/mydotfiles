#!/bin/sh

case $BLOCK_BUTTON in
	1) notify-send "ðŸ–¥ CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | head)\\n(100% per core)" ;;
	2) setsid -f "$TERMINAL" -e htop ;;
	3) notify-send "ðŸ–¥ CPU module " "\- Shows CPU temperature.
- Click to show intensive processes.
- Middle click to open htop." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

var="$(sensors | awk '/Package/ {print $4}')"
var1=${var:1:2}

case "$var1" in
	([0-3][0-5]) printf "^c#71e3f0^ï‹‹ $var^d^";; 
	([3][5-9]) printf "^c#5076eb^ï‹Š $var^d^";;
	([4-6][0-9]) printf "^c#7723cc^ï‹‰ $var^d^";;
	([7][0-9]) printf "^c#c41097^ï‹ˆ $var^d^";;
	([8][0-4]) printf "^c#c41064^ï‹‡ $var^d^";;
	([8][5-9]) printf "^c#c41043^ï‹›ï‹‡ $var^d^";; 
	([9][0-9]) printf "^c#f50010^ï‹›ï‹‡ $var^d^";;
esac
